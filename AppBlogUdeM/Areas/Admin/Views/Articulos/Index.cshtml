@{
    ViewData["Title"] = "Lista de Artículos";
}
<link rel="stylesheet" href="~/css/articulo.css" />


<div class="container mt-4">
    <!-- Título y botón de creación -->
    <div class="row align-items-center">
        <div class="col-md-8">
            <h2 class="text-primary">Lista de Artículos</h2>
        </div>
        <div class="col-md-4 text-md-end text-center mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-crear-articulo">
                <i class="fa-solid fa-plus me-2"></i> Crear Nuevo Artículo
            </a>
        </div>


    </div>

    <br />

    <!-- Tabla de artículos -->
    <div class="table-responsive">
        <table id="tblArticulos" class="table table-striped table-bordered w-100">
            <thead class="table-light">
                <tr>
                    <th scope="col" class="d-none d-md-table-cell">Id</th> <!-- Ocultar en móviles -->
                    <th scope="col">Nombre</th>
                    <th scope="col">Categoría</th>
                    <th scope="col" class="d-none d-md-table-cell">Imagen</th> <!-- Ocultar en móviles -->
                    <th scope="col">Fecha de Creación</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/articulos.js"></script>
    <script>
        var isAdmin = "@User.IsInRole("Administrador")".toLowerCase();
    </script>
}

@page
@using BlogCore.Utilidades
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center">Crear una nueva cuenta</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control rounded" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Nombre -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Nombre" class="form-control rounded" autocomplete="nombre" aria-required="true" placeholder="Ingresa el nombre" />
                    <label asp-for="Input.Nombre">Nombre</label>
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>

                <!-- Dirección -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Direccion" class="form-control rounded" autocomplete="direccion" aria-required="true" placeholder="Ingresa la dirección" />
                    <label asp-for="Input.Direccion">Dirección</label>
                    <span asp-validation-for="Input.Direccion" class="text-danger"></span>
                </div>

                <!-- Ciudad -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Ciudad" class="form-control rounded" autocomplete="ciudad" aria-required="true" placeholder="Ingresa la ciudad" />
                    <label asp-for="Input.Ciudad">Ciudad</label>
                    <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
                </div>

                <!-- País -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.carnet" class="form-control rounded" autocomplete="pais" aria-required="true" placeholder="Ingresa el país" />
                    <label asp-for="Input.carnet">Número de Carnet</label>
                    <span asp-validation-for="Input.carnet" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control rounded" autocomplete="telefono" aria-required="true" placeholder="Ingresa el teléfono" />
                    <label asp-for="Input.PhoneNumber">Teléfono</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>


                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control rounded" autocomplete="new-password" aria-required="true" placeholder="Contraseña" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirmar Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control rounded" autocomplete="new-password" aria-required="true" placeholder="Confirmar contraseña" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Selector de roles si el usuario es administrador -->
                <!-- Selector de roles si el usuario es administrador -->
                @if (User.IsInRole(CNT.Administrador))
                {
                    <div class="mb-3">
                        <h4>Seleccionar Rol de Usuario</h4>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Input.UserRole" value="@CNT.Administrador" id="adminRole" />
                            <label class="form-check-label" for="adminRole">@CNT.Administrador</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Input.UserRole" value="@CNT.Registrado" id="userRole" />
                            <label class="form-check-label" for="userRole">@CNT.Registrado</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Input.UserRole" value="@CNT.Moderador" id="moderatorRole" />
                            <label class="form-check-label" for="moderatorRole">@CNT.Moderador</label>
                        </div>
                    </div>
                }


               <!-- Botón de registro -->
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded">Registro</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

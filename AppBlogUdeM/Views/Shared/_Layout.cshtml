@using BlogCore.Utilidades
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog UdeM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootswatch.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!--Css todos-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

</head>
<body>
    <header>
        @* Bootswatch *@



        <nav class="navbar navbar-expand-lg bg-primary navbar-dark" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="~/imagenes/LogoUdeM.png" width="70" class="d-block d-lg-inline" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">
                                <i class="fas fa-house-chimney"></i> Inicio
                            </a>
                        </li>

                        @if (User.IsInRole(CNT.Administrador) || User.IsInRole(CNT.Moderador))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Categorias" asp-action="Index">
                                    <i class="fas fa-tags"></i> Categorías
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Articulos" asp-action="Index">
                                    <i class="fas fa-file-alt"></i> Artículos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Sliders" asp-action="Index">
                                    <i class="fas fa-images"></i> Sliders
                                </a>
                            </li>
                        }

                        @if (User.IsInRole(CNT.Administrador))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Usuarios" asp-action="Index">
                                    <i class="fas fa-user-friends"></i> Usuarios
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Búsqueda solo visible en pantallas grandes -->
                    <form class="busqueda d-flex ms-5 me-4 d-none d-lg-flex" asp-controller="Home" asp-action="ResultadoBusqueda" method="get">
                        <input class="form-control text-dark" style="border-radius: 0.25rem; width: 350px;" type="text" name="searchString" placeholder="Buscar Artículo">
                        <button class="btn btn-success ms-2" style="border-radius: 0.25rem; padding-left: 20px; padding-right: 20px;" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>




                    <div id="weather" class="navbar-text mb-2 d-none d-lg-block"></div>
                    <div class="d-flex align-items-center ms-5">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>







        <!--Aquí vista parcial slider-->
        @if (ViewBag.IsHome == true)
        {
            <partial name="_Slider" />
        }

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>





    <!-- Banner: solo visible si no está autenticado -->
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="container-fluid banner-container">
            <div class="container banner-content">
                <a href="/Identity/Account/Register">
                    <button type="button" class="btn btn-success subscribe-btn">Suscríbete a Nuestro Blog</button>
                </a>
            </div>
        </div>
    }




    <footer class="border-top footer text-muted bg-dark text-center" style="background-color: #1a1a1a !important;">
        <div class="container py-4">
            <span class="text-white">&copy; <span id="year"></span> - Universidad de Managua</span>
        </div>
    </footer>

    <script>
        document.getElementById("year").textContent = new Date().getFullYear();
    </script>



    <!-- Scripts Bootstrap y jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/weather.js"></script>

    <!--Js plugins-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/3.2.1/jquery.serializejson.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
